<div class="card">
  <div class="card-header">
   <%= @friend.first_name %>
   <%= @friend.last_name %>
  </div>
  <div class="card-body">
    <p class="card-text">
      <%= @friend.email %> <br>
      <%= @friend.phone %> <br>
      <%= @friend.twitter %>
    </p>
    <%= link_to 'Edit', edit_friend_path(@friend), class: 'btn btn-secondary' %>  
    <%= link_to 'Back', friends_path, class: 'btn btn-secondary' %>
  </div>
</div>